<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11234D"
    android:paddingHorizontal="32dp"
    android:paddingTop="40dp"
    android:paddingBottom="32dp">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPracticeAI"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:text="PracticeAI"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#18BF58"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuImage" />

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:src="@drawable/ibphysics"
        android:scaleType="centerCrop"
        android:contentDescription="Physics Banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTheory"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:text="Theory"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#18BF58"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/menuImage"
        android:layout_marginEnd="12dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFormulas"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:text="Formulas"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#18BF58"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnTheory"
        android:layout_marginStart="12dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExtra"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:text="Extra"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#18BF58"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/btnTheory" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>